<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.30.1/moment.min.js"></script>

<script>

const getItemList = async () => {
    axios.post('/api/admin/getItemList', {})
      .then(response => {
        const result = response.data
        if (result.error) {
          return Swal.fire({
            icon: "error",
            title: "Oops...",
            text: result.message,
          });
        }
        const list = response.data.data
        let str = "";
        if(list.length) {
            list.map((item) => {
                str +=  `<tr>
                    <td>${ item.id }</td>
                    <td>${ item.name }</td>
                    <td>${ item.code }</td>
                    <td>${ item.batchCode }</td>
                    <td>${ item.taxValue }</td>
                    <td>${ item.gstPercent }</td>
                    <td>${ item.price }</td>
                </tr>`;
            })
            const billListDiv = document.getElementById('billList'); 
            billListDiv.innerHTML = str;
        }
       
      })
      .catch(error => {
        console.error('Error:', error);
      });
 }

 getItemList();

</script>

</html>